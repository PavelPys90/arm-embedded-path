% beamerthemeSimSchoolDark.sty
% SimSchool Dark Theme für LaTeX Beamer
% Basierend auf den SimSchool Farben

\mode<presentation>

% Farbdefinitionen - Neue Farbpalette (dunkel zu hell)
\definecolor{simschooldarkest}{RGB}{13, 27, 42}    % #0D1B2A - Sehr dunkel
\definecolor{simschooldark}{RGB}{27, 38, 59}       % #1B263B - Dunkel
\definecolor{simschoolmedium}{RGB}{65, 90, 119}    % #415A77 - Mittel
\definecolor{simschoollight}{RGB}{119, 141, 169}   % #778DA9 - Hell
\definecolor{simschoolbg}{RGB}{255, 255, 255}      % #E0E1DD - Hintergrund (hellste)

% Hauptfarben für das Theme
\definecolor{simschoolblue}{RGB}{224, 225, 221}    % Heller Hintergrund
\definecolor{simschoolcyan}{RGB}{13, 27, 42}       % Dunkler Text (dunkelste Farbe)

% Zusätzliche passende Farbtöne
\definecolor{simschoolcyanlight}{RGB}{65, 90, 119}    % Für Highlights
\definecolor{simschoolcyandark}{RGB}{27, 38, 59}      % Für Kontraste
\definecolor{simschoolbluelight}{RGB}{119, 141, 169}  % Für Boxen
\definecolor{simschoolgray}{RGB}{119, 141, 169}       % Für deaktivierte Elemente

% Farbschema
\setbeamercolor{background canvas}{bg=simschoolbg}
\setbeamercolor{normal text}{fg=simschooldarkest}
\setbeamercolor{structure}{fg=simschooldark}
\setbeamercolor{frametitle}{fg=simschooldarkest, bg=simschoolbg}
\setbeamercolor{title}{fg=simschooldarkest}
\setbeamercolor{subtitle}{fg=simschooldark}
\setbeamercolor{author}{fg=simschooldark}
\setbeamercolor{date}{fg=simschooldark}
\setbeamercolor{institute}{fg=simschooldark}

% Farben für Listen und Blöcke
\setbeamercolor{item}{fg=simschooldarkest}
\setbeamercolor{subitem}{fg=simschooldark}
\setbeamercolor{subsubitem}{fg=simschoolmedium}
\setbeamercolor{block title}{fg=simschoolbg, bg=simschoolmedium}
\setbeamercolor{block body}{fg=simschooldarkest, bg=simschoollight!30!simschoolbg}
\setbeamercolor{block title example}{fg=simschoolbg, bg=simschooldark}
\setbeamercolor{block body example}{fg=simschooldarkest, bg=simschoollight!20!simschoolbg}
\setbeamercolor{block title alerted}{fg=simschoolbg, bg=simschooldarkest}
\setbeamercolor{block body alerted}{fg=simschooldarkest, bg=simschoollight!25!simschoolbg}

% Farben für Fußzeile
\setbeamercolor{footline}{fg=simschooldarkest, bg=simschoolbg}
\setbeamercolor{page number in head/foot}{fg=simschooldarkest}
\setbeamercolor{section in head/foot}{fg=simschooldarkest}

% Navigation ausblenden
\setbeamertemplate{navigation symbols}{}

% Kopfzeile: nur horizontale Linie
\setbeamertemplate{headline}{%
	\begin{beamercolorbox}[wd=\paperwidth,ht=0.5pt,dp=0pt]{structure}
		\color{simschoolmedium}\rule{\paperwidth}{0.5pt}
	\end{beamercolorbox}
	\vskip2pt
}

% Fußzeile: Datum, Autor, Titel, Section, Foliennummer
\setbeamertemplate{footline}{%
	\vskip2pt
	\begin{beamercolorbox}[wd=\paperwidth,ht=0.5pt,dp=0pt]{structure}
		\color{simschoolmedium}\rule{\paperwidth}{0.5pt}
	\end{beamercolorbox}
	\begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1ex,leftskip=.3cm,rightskip=.3cm]{footline}
		\usebeamerfont{footline}
		\insertshortdate{} \hfill 
		\insertshortauthor{} \hfill 
		\insertshorttitle{} \hfill 
		\insertsectionhead{} \hfill 
		\insertframenumber{}/\inserttotalframenumber
	\end{beamercolorbox}
}

% Frametitle Template
\setbeamertemplate{frametitle}{%
	\vskip10pt
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=.3cm]{frametitle}
		\usebeamerfont{frametitle}\insertframetitle
		\ifx\insertframesubtitle\@empty
		\else
		\par\usebeamerfont{framesubtitle}\insertframesubtitle
		\fi
	\end{beamercolorbox}
	\vskip5pt
}

% Schriftarten
\setbeamerfont{title}{size=\LARGE, series=\bfseries}
\setbeamerfont{subtitle}{size=\large}
\setbeamerfont{author}{size=\normalsize}
\setbeamerfont{date}{size=\normalsize}
\setbeamerfont{frametitle}{size=\Large, series=\bfseries}
\setbeamerfont{framesubtitle}{size=\normalsize}
\setbeamerfont{footline}{size=\tiny}

% Itemize/Enumerate Symbole
\setbeamertemplate{itemize item}{\color{simschooldarkest}$\bullet$}
\setbeamertemplate{itemize subitem}{\color{simschooldark}$\circ$}
\setbeamertemplate{itemize subsubitem}{\color{simschoolmedium}$-$}

% Inhaltsverzeichnis mit normalen Bulletpoints
\setbeamertemplate{section in toc}{%
	\leavevmode\color{simschooldarkest}$\bullet$\hskip0.5em\inserttocsection\par
}

% Transparenz für nicht-aktuelle Sections im Inhaltsverzeichnis
\setbeamertemplate{section in toc shaded}{%
	\leavevmode\color{simschoollight}$\bullet$\hskip0.5em\inserttocsection\par
}
\setbeamercolor{section in toc shaded}{fg=simschoollight}

% Subsections im Inhaltsverzeichnis
\setbeamertemplate{subsection in toc}{%
	\leavevmode\leftskip=2em\color{simschooldark}$\circ$\hskip0.5em\inserttocsubsection\par
}
\setbeamertemplate{subsection in toc shaded}{%
	\leavevmode\leftskip=2em\color{simschoollight}$\circ$\hskip0.5em\inserttocsubsection\par
}

\mode<all>